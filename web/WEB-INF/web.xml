<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletListarClientes</servlet-name>
        <servlet-class>servlets.clientes.ServletListarJSONClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistrarCliente</servlet-name>
        <servlet-class>servlets.clientes.ServletRegistrarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListarClientes2</servlet-name>
        <servlet-class>servlets.clientes.ServletListarClientes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletListarClientes</servlet-name>
        <url-pattern>/listarclientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistrarCliente</servlet-name>
        <url-pattern>/registrarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListarClientes2</servlet-name>
        <url-pattern>/listarclientes2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
